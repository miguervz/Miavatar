<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MiAvatar" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/marroncito</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/brown</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>
    <style name="Theme.MiAvatar3" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/marroncito</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/brown</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <style name="marronNombre" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#952400</item>
        <item name="android:fontFamily">@font/fuentenombre</item>
        <item name="android:textSize">37dp</item>

    </style>
    <style name="marronCito" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#952400</item>
        <item name="android:fontFamily">@font/fuentenombre</item>
        <item name="android:textSize">23dp</item>

    </style>
    <style name="negro" parent="TextAppearance.AppCompat">
        <item name="backgroundColor">@color/marroncito</item>
        <item name="android:textColor">#000000</item>
        <item name="android:fontFamily">@font/fuentenombre</item>
        <item name="android:textSize">19dp</item>
    </style>

    <style name="Theme.MiAvatar3.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.MiAvatar3.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.MiAvatar3.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>